{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~html/*": ["./src/html/*"],
      "~scripts/*": ["./src/scripts/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  }
}
